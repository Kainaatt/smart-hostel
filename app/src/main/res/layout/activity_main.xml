<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Wave Background -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_wave"
            android:paddingBottom="32dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- Top Bar -->
            <LinearLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="48dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_back"
                        android:textColor="#CCFFFFFF"
                        android:textSize="14sp"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/student_name"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle_notification"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notification"
                        android:contentDescription="@string/notifications" />

                    <!-- Notification Badge -->
                    <View
                        android:id="@+id/notificationBadge"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_notification_badge" />

                </FrameLayout>

                <!-- Logout Button -->
                <FrameLayout
                    android:id="@+id/btnLogout"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_circle_notification"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_logout"
                        app:tint="@color/white"
                        android:contentDescription="@string/logout" />

                </FrameLayout>

            </LinearLayout>

            <!-- Hero Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topBar"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/got_an_issue"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/hero_description"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmitComplaint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:minHeight="56dp"
                        android:paddingVertical="14dp"
                        android:text="@string/submit_complaint"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_add_complaint"
                        app:iconGravity="textStart"
                        app:iconPadding="10dp"
                        app:iconSize="20dp"
                        app:cornerRadius="14dp"
                        app:backgroundTint="@color/primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="28dp"
            android:paddingBottom="24dp">

            <!-- Quick Actions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quick_actions"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp" />

            </LinearLayout>

            <!-- Quick Action Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:baselineAligned="false">

                <!-- View History Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewHistory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/outline"
                    app:cardBackgroundColor="@color/surface"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_icon_primary">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_history"
                                app:tint="@color/primary"
                                android:contentDescription="@string/view_history" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/view_history"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/view_history_desc"
                            android:textColor="@color/text_hint"
                            android:textSize="11sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Track Status Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTrackStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/outline"
                    app:cardBackgroundColor="@color/surface"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_icon_secondary">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_track_status"
                                app:tint="@color/secondary"
                                android:contentDescription="@string/track_status" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/track_status"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/track_status_desc"
                            android:textColor="@color/text_hint"
                            android:textSize="11sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Categories Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/categories"
                android:textColor="@color/text_primary"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/categories_desc"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <!-- Category Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true">

                <!-- Electricity -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardElectricity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="14dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/category_electricity_bg"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_electricity"
                            android:contentDescription="@string/electricity" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/electricity"
                            android:textColor="@color/category_electricity"
                            android:textSize="13sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Water -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardWater"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="14dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/category_water_bg"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_water"
                            android:contentDescription="@string/water" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/water"
                            android:textColor="@color/category_water"
                            android:textSize="13sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Maintenance -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMaintenance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="14dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/category_maintenance_bg"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_maintenance"
                            android:contentDescription="@string/maintenance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/maintenance"
                            android:textColor="@color/category_maintenance"
                            android:textSize="13sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Cleanliness -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCleanliness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="14dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/category_cleanliness_bg"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_cleanliness"
                            android:contentDescription="@string/cleanliness" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/cleanliness"
                            android:textColor="@color/category_cleanliness"
                            android:textSize="13sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Staff -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardStaff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="14dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/category_staff_bg"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_staff"
                            android:contentDescription="@string/staff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/staff"
                            android:textColor="@color/category_staff"
                            android:textSize="13sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- Recent Complaints Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="28dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/recent_complaints"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all"
                    android:textColor="@color/primary"
                    android:textSize="13sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp" />

            </LinearLayout>

            <!-- Recent Complaints RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecentComplaints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:nestedScrollingEnabled="false" />

            <!-- Bottom Spacing -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

