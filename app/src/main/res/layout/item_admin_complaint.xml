<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/outline"
    app:cardBackgroundColor="@color/surface"
    app:cardElevation="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <FrameLayout
                android:id="@+id/categoryIconFrame"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_icon_electricity">

                <ImageView
                    android:id="@+id/ivCategoryIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_electricity" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvComplaintId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#CMP-001"
                    android:textColor="@color/admin_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Power outage in Room 304"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvUrgency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH"
                android:textColor="@color/urgency_high"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/bg_urgency_high"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp" />

        </LinearLayout>

        <!-- Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvRoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Room 304, Block A"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_room_small"
                android:drawablePadding="6dp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 16, 2024"
                android:textColor="@color/text_hint"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/statusDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_status_dot_pending" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Pending"
                android:textColor="@color/urgency_medium"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_hint" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

