<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Application Theme - Light Mode -->
    <style name="Theme.ComplaintApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Error color -->
        <item name="colorError">@color/urgency_high</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Text Input styling -->
        <item name="android:editTextColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.ComplaintApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.ComplaintApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.ComplaintApp.LargeComponent</item>
        
        <!-- Material Button Style -->
        <item name="materialButtonStyle">@style/Widget.ComplaintApp.Button</item>
        <item name="materialCardViewStyle">@style/Widget.ComplaintApp.CardView</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.ComplaintApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.ComplaintApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.ComplaintApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.ComplaintApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Widget.ComplaintApp.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.ComplaintApp.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.ComplaintApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.ComplaintApp.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.ComplaintApp.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.ComplaintApp.Headline3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.ComplaintApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.ComplaintApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.ComplaintApp.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.ComplaintApp.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

</resources>
